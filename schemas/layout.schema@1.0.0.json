{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.freekds.dev/layout.schema@1.0.0.json",
  "title": "Layout",
  "type": "object",
  "properties": {
    "screens": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/screen"
      }
    }
  },
  "required": [
    "screens"
  ],
  "additionalProperties": false,
  "definitions": {
    "style": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "string",
          "number"
        ]
      }
    },
    "block": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Grid",
            "Stack",
            "Tabs",
            "TicketList",
            "Filters",
            "Header",
            "Footer",
            "AllDayAggregate",
            "AllDayFilter",
            "AllDayCounts"
          ]
        },
        "props": {
          "type": "object",
          "additionalProperties": true
        },
        "blocks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/block"
          }
        },
        "style": {
          "$ref": "#/definitions/style"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "screen": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "blocks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/block"
          }
        },
        "showTopBar": { "type": "boolean" },
        "style": {
          "$ref": "#/definitions/style"
        }
      },
      "required": [
        "id",
        "blocks"
      ],
      "additionalProperties": false
    }
  }
}
