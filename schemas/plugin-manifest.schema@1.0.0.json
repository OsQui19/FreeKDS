{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.freekds.dev/plugin-manifest.schema@1.0.0.json",
  "title": "FreeKDS Plugin Manifest",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "main",
    "activationEvents",
    "contributes",
    "license",
    "coreAPI"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the plugin."
    },
    "name": {
      "type": "string",
      "description": "Human readable name of the plugin."
    },
    "version": {
      "type": "string",
      "description": "Plugin version in semver format."
    },
    "description": {
      "type": "string",
      "description": "Description of the plugin."
    },
    "main": {
      "type": "string",
      "description": "Path to the pluginâ€™s entry module relative to this manifest."
    },
    "route": {
      "type": "string",
      "description": "Optional route used for navigation."
    },
    "license": {
      "type": "string",
      "description": "SPDX identifier for the plugin's license."
    },
    "coreAPI": {
      "type": "string",
      "description": "Target version of the FreeKDS core plugin API."
    },
    "activationEvents": {
      "type": "array",
      "description": "Events that trigger plugin activation.",
      "items": {
        "type": "string"
      }
    },
    "contributes": {
      "type": "object",
      "description": "Contribution points provided by the plugin.",
      "required": [
        "adminPanels",
        "actions",
        "routes",
        "transforms",
        "shortcuts"
      ],
      "properties": {
        "actions": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "routes": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "transforms": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "shortcuts": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "adminPanels": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "title"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "requiredDomains": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "requiredScopes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "latency": {
                "type": "string"
              },
              "route": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
