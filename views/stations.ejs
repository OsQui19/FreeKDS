<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Stations</title>
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/base.css">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/home.css">
  <%- include('partials/theme-vars') %>
</head>
<body class="login-page home-page d-flex align-items-center justify-content-center">
  <main class="login-container text-center">
    <div class="login-card card shadow-sm p-4">
      <h1 class="mb-4">Choose Station</h1>
      <div class="options">
        <% stations.forEach(function(st) { %>
          <a href="/station/<%= st.id %>" class="btn btn-primary dash-btn">
            <i class="bi bi-display-fill me-2" aria-hidden="true"></i><%= st.name %>
            <% if (st.type) { %>
              <small class="d-block text-uppercase"><%= st.type %></small>
            <% } %>
          </a>
        <% }); %>
        <% if (hasRoleLevel(roles[roles.length - 1])) { %>
          <a href="/admin?tab=stations" class="btn btn-secondary dash-btn">
            <i class="bi bi-gear-fill me-2" aria-hidden="true"></i>Manage Stations
          </a>
        <% } %>
      </div>
      <%- include('partials/nav-buttons') %>
    </div>
  </main>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
