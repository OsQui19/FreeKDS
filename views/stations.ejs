<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Stations</title>
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/base.css">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/home.css">
  <%- include('partials/theme-vars') %>
</head>
<body class="home-page d-flex align-items-center justify-content-center">
  <%- include('partials/header') %>
  <div class="container text-center">
    <h1 class="mb-4">Choose Station</h1>
    <div class="row options">
      <% stations.forEach(function(st) { %>
        <div class="col-12 col-md-4 mb-3">
          <a href="/station/<%= st.id %>" class="btn btn-primary btn-lg w-100 py-4">
            <%= st.name %>
            <% if (st.type) { %>
              <small class="d-block text-uppercase"><%= st.type %></small>
            <% } %>
          </a>
        </div>
      <% }); %>
      <% if (hasRoleLevel(roles[roles.length - 1])) { %>
        <div class="col-12 col-md-4 mb-3">
          <a href="/admin?tab=stations" class="btn btn-secondary btn-lg w-100 py-4">Manage Stations</a>
        </div>
      <% } %>
    </div>
  </div>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
