<% title = 'Clock In'; %>
<% bodyClass = 'login-page clock-page d-flex align-items-center justify-content-center min-vh-100'; %>
<%- contentFor('head') %>
<link rel="stylesheet" href="/login.css">
<link rel="stylesheet" href="/clock.css">
<%- contentFor('body') %>
<% function clockForm() { %>
  <% if (settings.brand_logo) { %>
    <img src="<%= settings.brand_logo %>" alt="<%= settings.brand_name || 'Clock In' %>" class="brand-logo mb-1">
  <% } else { %>
    <h1 class="brand-name mb-1"><%= settings.brand_name || 'Clock In' %></h1>
  <% } %>
  <p class="text-muted mb-4">Enter PIN</p>
  <form method="post" action="/clock" id="pinForm">
    <%- include('partials/form-input', { type: 'password', id: 'pinInput', name: 'pin', inputClass: 'mb-3', required: true, extra: 'inputmode="numeric" pattern="\\d{4,6}" autofocus autocomplete="one-time-code"' }) %>
    <div id="keypad" class="keypad"></div>
    <%- include('partials/button', { type: 'submit', variant: 'btn-primary', classes: 'w-100 mt-3', text: 'Clock In' }) %>
  </form>
<% } %>
<%- include('partials/auth-card', { containerClass: 'text-center', body: clockForm }) %>
<script src="/clock.js"></script>
