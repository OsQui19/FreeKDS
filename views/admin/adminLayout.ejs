<!-- adminLayout.ejs — optional wrapper for admin pages
     Uses your existing header.ejs and sidenav.ejs. Drop-in:
     res.render('adminLayout', { content: htmlString, ...locals })
-->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle + ' · Admin' : 'Admin' %></title>
    <%- include('partials/head') %>
    <%- typeof head !== 'undefined' ? head : '' %>
  </head>
  <body class="admin-screen">
    <%- include('partials/header') %>
    <%- include('partials/sidenav', { allowedModules }) %>
    <main class="container admin-container">
      <%- typeof body !== 'undefined' ? body : '' %>
    </main>
  </body>
</html>
