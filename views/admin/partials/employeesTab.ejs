<div class="container admin-container employees-tabs">
  <h1>Employees</h1>
  <ul class="nav nav-tabs" id="employeesTabs">
    <li class="nav-item"><a href="#onboardingPane" class="nav-link active" data-pane="onboardingPane">Onboarding</a></li>
    <li class="nav-item"><a href="#schedulePane" class="nav-link" data-pane="schedulePane">Scheduling</a></li>
    <li class="nav-item"><a href="#hierarchyPane" class="nav-link" data-pane="hierarchyPane">Hierarchy</a></li>
    <li class="nav-item"><a href="#timePane" class="nav-link" data-pane="timePane">Time</a></li>
    <li class="nav-item"><a href="#payrollPane" class="nav-link" data-pane="payrollPane">Payroll</a></li>
  </ul>
  <div class="tab-content">
    <div class="employees-pane active" id="onboardingPane">
      <form id="employeeOnboardingForm">
        <div class="row g-2 mb-3">
          <div class="col-sm-3">
            <input type="text" class="form-control form-control-sm" name="first_name" placeholder="First Name" />
          </div>
          <div class="col-sm-3">
            <input type="text" class="form-control form-control-sm" name="last_name" placeholder="Last Name" />
          </div>
          <div class="col-sm-3">
            <input type="text" class="form-control form-control-sm" name="position" placeholder="Position" />
          </div>
          <div class="col-sm-3">
            <input type="date" class="form-control form-control-sm" name="start_date" />
          </div>
        </div>
        <div class="row g-2 mb-3">
          <div class="col-sm-3">
            <input type="email" class="form-control form-control-sm" name="email" placeholder="Email" />
          </div>
          <div class="col-sm-3">
            <input type="text" class="form-control form-control-sm" name="phone" placeholder="Phone" />
          </div>
          <div class="col-sm-3">
            <input type="number" step="0.01" class="form-control form-control-sm" name="wage_rate" placeholder="Wage Rate" />
          </div>
          <div class="col-sm-3">
            <input type="text" class="form-control form-control-sm" name="username" placeholder="Username" />
          </div>
        </div>
        <div class="row g-2 mb-3">
          <div class="col-sm-4">
            <input type="password" class="form-control form-control-sm" name="password" placeholder="Password" autocomplete="new-password" />
          </div>
          <div class="col-sm-4">
            <input type="password" class="form-control form-control-sm" name="pin" placeholder="PIN (4-6 digits)" autocomplete="new-password" pattern="\d{4,6}" />
          </div>
          <div class="col-sm-4">
            <select name="role" id="roleSelect" class="form-select form-select-sm"></select>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label">Documents</label>
          <input type="file" class="form-control form-control-sm" name="documents" multiple />
        </div>
        <input type="hidden" id="employeeIndex" />
        <button type="submit" class="btn btn-primary btn-sm" id="onboardingSave">Save</button>
        <button type="button" class="btn btn-secondary btn-sm ms-2 d-none" id="onboardingCancel">Cancel</button>
      </form>
      <div class="mt-4">
        <h5>Current Employees</h5>
        <table class="table table-sm" id="onboardingTable">
          <thead>
            <tr>
              <th>First</th>
              <th>Last</th>
              <th>Position</th>
              <th>Start</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Wage</th>
              <th>Username</th>
              <th>Role</th>
              <th></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  <div class="employees-pane" id="schedulePane">
    <div id="scheduleApp">
      <div class="text-center w-100 p-5" id="scheduleLoading">
        <div class="spinner-border" role="status"></div>
        <p class="mt-2">Loading schedule...</p>
      </div>
    </div>
  </div>
      <div class="employees-pane" id="hierarchyPane">
        <ul id="hierarchyTree" class="list-unstyled mb-3"></ul>
        <h5>Roles</h5>
        <p class="text-muted small">
          Order roles from lowest to highest privilege. The last role has access
          to everything.
        </p>
        <ul id="roleList" class="list-group mb-2"></ul>
        <form id="addRoleForm" class="d-flex">
          <input type="text" name="role" class="form-control form-control-sm me-2" placeholder="New role" />
          <button type="submit" class="btn btn-sm btn-primary">Add</button>
        </form>
        <h5 class="mt-3">Module Access</h5>
        <table id="permissionsTable" class="table table-sm">
          <thead>
            <tr class="table-light">
              <th rowspan="2">Role</th>
              <th colspan="<%= (modules || []).slice(0,2).length %>">KDS / Order Screens</th>
              <th colspan="<%= (modules || []).slice(2).length %>">Admin Interface</th>
            </tr>
            <tr>
              <% (modules || []).forEach(function(m){ %>
                <th><%= m.replace(/-/g,' ').replace(/\b\w/g,c=>c.toUpperCase()) %></th>
              <% }); %>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
      <div class="employees-pane" id="timePane">
        <table class="table table-sm" id="timeTable">
          <thead>
            <tr><th>Employee</th><th>Clock In</th><th>Clock Out</th><th></th></tr>
          </thead>
          <tbody></tbody>
        </table>
        <div id="timeEditModal" class="modal d-none">
          <div class="modal-content modal-small">
            <button id="timeEditCancel" class="btn-secondary btn-sm mb-2">Close</button>
            <form id="timeEditForm">
              <input type="hidden" name="id">
              <div class="mb-2">
                <label class="form-label">Clock In</label>
                <input type="datetime-local" name="clock_in" class="form-control form-control-sm" required>
              </div>
              <div class="mb-2">
                <label class="form-label">Clock Out</label>
                <input type="datetime-local" name="clock_out" class="form-control form-control-sm">
              </div>
              <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </form>
          </div>
        </div>
      </div>
      <div class="employees-pane" id="payrollPane">
        <p>Payroll calculations will appear here.</p>
      </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script defer src="/employeesTab.js"></script>
