<div class="container admin-container employees-tabs">
  <h1 class="admin-section-title">Employees</h1>
  <ul class="nav nav-tabs" id="employeesTabs">
    <li class="nav-item"><a href="#onboardingPane" class="nav-link active" data-pane="onboardingPane">Onboarding</a></li>
    <li class="nav-item"><a href="#schedulePane" class="nav-link" data-pane="schedulePane">Scheduling</a></li>
    <li class="nav-item"><a href="#hierarchyPane" class="nav-link" data-pane="hierarchyPane">Hierarchy</a></li>
    <li class="nav-item"><a href="#timePane" class="nav-link" data-pane="timePane">Time</a></li>
    <li class="nav-item"><a href="#payrollPane" class="nav-link" data-pane="payrollPane">Payroll</a></li>
  </ul>
  <div class="tab-content">
    <div class="employees-pane active" id="onboardingPane">
      <div id="onboardingApp">
        <div class="text-center w-100 p-5" id="onboardingLoading">
          <div class="spinner-border" role="status"></div>
          <p class="mt-2">Loading onboarding...</p>
        </div>
      </div>
    </div>
  <div class="employees-pane" id="schedulePane">
    <div id="scheduleApp">
      <div class="text-center w-100 p-5" id="scheduleLoading">
        <div class="spinner-border" role="status"></div>
        <p class="mt-2">Loading schedule...</p>
      </div>
    </div>
  </div>
      <div class="employees-pane" id="hierarchyPane">
        <div id="hierarchyApp">
          <div class="text-center w-100 p-5" id="hierarchyLoading">
            <div class="spinner-border" role="status"></div>
            <p class="mt-2">Loading hierarchy...</p>
          </div>
        </div>
      </div>
      <div class="employees-pane" id="timePane">
        <div class="table-responsive">
        <table class="table table-sm" id="timeTable">
          <thead>
            <tr><th>Employee</th><th>Clock In</th><th>Clock Out</th><th></th></tr>
          </thead>
          <tbody></tbody>
        </table>
        </div>
        <div id="timeEditModal" class="modal custom-modal d-none">
          <div class="modal-content modal-small">
              <button id="timeEditCancel" class="btn btn-secondary btn-sm mb-2">Close</button>
            <form id="timeEditForm">
              <input type="hidden" name="id">
              <div class="mb-2">
                <label class="form-label">Clock In</label>
                <input type="datetime-local" name="clock_in" class="form-control form-control-sm" required>
              </div>
              <div class="mb-2">
                <label class="form-label">Clock Out</label>
                <input type="datetime-local" name="clock_out" class="form-control form-control-sm">
              </div>
              <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </form>
          </div>
        </div>
      </div>
      <div class="employees-pane" id="payrollPane">
        <div class="d-flex justify-content-end mb-2">
          <button id="exportPayroll" class="btn btn-sm btn-outline-secondary">Export CSV</button>
        </div>
        <div class="table-responsive">
        <table class="table table-sm" id="payrollTable">
          <thead>
            <tr><th>Employee</th><th>Period Start</th><th>Hours</th></tr>
          </thead>
          <tbody></tbody>
        </table>
        </div>
      </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<link rel="stylesheet" href="/dist/schedule.css">
<link rel="stylesheet" href="/dist/hierarchy.css">
<script type="module" defer src="/dist/onboarding.js"></script>
<script type="module" defer src="/dist/hierarchy.js"></script>
<script defer src="/employeesTab.js"></script>
