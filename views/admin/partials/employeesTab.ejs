<div class="container admin-container employees-tabs">
  <h1>Employees</h1>
  <ul class="nav nav-tabs" id="employeesTabs">
    <li class="nav-item"><a href="#onboardingPane" class="nav-link active" data-pane="onboardingPane">Onboarding</a></li>
    <li class="nav-item"><a href="#schedulePane" class="nav-link" data-pane="schedulePane">Scheduling</a></li>
    <li class="nav-item"><a href="#hierarchyPane" class="nav-link" data-pane="hierarchyPane">Hierarchy</a></li>
  </ul>
  <div class="tab-content">
    <div class="employees-pane active" id="onboardingPane">
      <form id="employeeOnboardingForm">
        <div class="row g-2 mb-3">
          <div class="col-sm-4">
            <input type="text" class="form-control form-control-sm" name="name" placeholder="Employee Name" />
          </div>
          <div class="col-sm-4">
            <input type="text" class="form-control form-control-sm" name="position" placeholder="Position" />
          </div>
          <div class="col-sm-4">
            <input type="date" class="form-control form-control-sm" name="start_date" />
          </div>
        </div>
        <div class="row g-2 mb-3">
          <div class="col-sm-4">
            <input type="text" class="form-control form-control-sm" name="username" placeholder="Username" />
          </div>
          <div class="col-sm-4">
            <input type="password" class="form-control form-control-sm" name="password" placeholder="Password" autocomplete="new-password" />
          </div>
          <div class="col-sm-4">
            <select name="role" id="roleSelect" class="form-select form-select-sm"></select>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label">Documents</label>
          <input type="file" class="form-control form-control-sm" name="documents" multiple />
        </div>
        <input type="hidden" id="employeeIndex" />
        <button type="submit" class="btn btn-primary btn-sm" id="onboardingSave">Save</button>
        <button type="button" class="btn btn-secondary btn-sm ms-2 d-none" id="onboardingCancel">Cancel</button>
      </form>
      <div class="mt-4">
        <h5>Current Employees</h5>
        <table class="table table-sm" id="onboardingTable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Position</th>
              <th>Start</th>
              <th>Username</th>
              <th>Role</th>
              <th></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
      <div class="employees-pane" id="schedulePane">
        <div class="row">
          <div class="col-md-3">
            <ul id="employeeList" class="list-group employee-list"></ul>
          </div>
          <div class="col-md-9">
            <div class="d-flex justify-content-end mb-2">
              <button id="toggleScheduleView" class="btn btn-sm btn-outline-primary">Monthly View</button>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <button id="prevWeek" class="btn btn-sm btn-outline-secondary" type="button">&laquo;</button>
              <span id="currentWeekLabel"></span>
              <button id="nextWeek" class="btn btn-sm btn-outline-secondary" type="button">&raquo;</button>
            </div>
            <div class="d-flex align-items-center mb-2">
              <label class="me-1">Start</label>
              <select id="scheduleStartHour" class="form-select form-select-sm w-auto me-2"></select>
              <label class="me-1">End</label>
              <select id="scheduleEndHour" class="form-select form-select-sm w-auto"></select>
            </div>
            <div id="scheduleGrid" class="table-responsive"></div>
          </div>
        </div>
        <div id="scheduleModal" class="modal d-none">
          <div class="modal-content modal-small">
            <button id="scheduleModalClose" class="btn-secondary">Close</button>
            <form id="scheduleForm">
              <input type="hidden" name="employeeId" />
              <div class="mb-2">
                <label class="form-label">Day</label>
                <select name="day" class="form-select form-select-sm">
                  <option value="0">Mon</option>
                  <option value="1">Tue</option>
                  <option value="2">Wed</option>
                  <option value="3">Thu</option>
                  <option value="4">Fri</option>
                  <option value="5">Sat</option>
                  <option value="6">Sun</option>
                </select>
              </div>
              <div class="mb-2">
                <label class="form-label">Start</label>
                <select name="start" class="form-select form-select-sm"></select>
              </div>
              <div class="mb-2">
                <label class="form-label">End</label>
                <select name="end" class="form-select form-select-sm"></select>
              </div>
              <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </form>
          </div>
        </div>
      </div>
      <div class="employees-pane" id="hierarchyPane">
        <ul id="hierarchyTree" class="list-unstyled mb-3"></ul>
        <h5>Roles</h5>
        <p class="text-muted small">
          Order roles from lowest to highest privilege. The last role has access
          to everything.
        </p>
        <ul id="roleList" class="list-group mb-2"></ul>
        <form id="addRoleForm" class="d-flex">
          <input type="text" name="role" class="form-control form-control-sm me-2" placeholder="New role" />
          <button type="submit" class="btn btn-sm btn-primary">Add</button>
        </form>
        <h5 class="mt-3">Module Access</h5>
        <table id="permissionsTable" class="table table-sm">
          <thead>
            <tr>
              <th>Role</th>
              <th>Stations</th>
              <th>Menu</th>
              <th>Theme</th>
              <th>Inventory</th>
              <th>Suppliers</th>
              <th>Purchase Orders</th>
              <th>Employees</th>
              <th>Reports</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
</div>
<script defer src="/employeesTab.js"></script>
