<div id="updatesTab" class="container admin-container">
  <h1 class="admin-section-title">System Updates</h1>
  <div class="card shadow-sm mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
          <span class="fw-bold">Latest version:</span>
          <span id="releaseVersion">-</span>
        </div>
        <%- include('../../partials/button', {
          id: 'checkUpdatesBtn',
          variant: 'btn-secondary',
          classes: 'btn-sm',
          text: 'Check for updates'
        }) %>
      </div>
      <pre id="releaseNotes" class="small"></pre>
      <div class="d-flex gap-2">
        <a id="downloadLink" class="btn btn-primary btn-sm mt-2 d-none" target="_blank" rel="noopener">Download</a>
        <%- include('../../partials/button', {
          id: 'applyUpdateBtn',
          variant: 'btn-danger',
          classes: 'btn-sm mt-2',
          text: 'Apply update'
        }) %>
      </div>
    </div>
  </div>
  <p>Current commit: <code id="gitCommit"></code></p>
  <p>Last updated: <span id="gitDate"></span></p>
  <h2 class="mt-3">Recent commits</h2>
  <ul id="gitLog" class="list-group"></ul>
  <div class="modal fade" id="applyUpdateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Apply Update</h5>
          <%- include('../../partials/button', {
            type: 'button',
            base: '',
            variant: 'btn-close',
            extra: 'data-bs-dismiss="modal" aria-label="Close"'
          }) %>
        </div>
        <div class="modal-body">
          Apply the latest update? The system may restart.
        </div>
        <div class="modal-footer">
          <%- include('../../partials/button', {
            type: 'button',
            variant: 'btn-secondary',
            text: 'Cancel',
            extra: 'data-bs-dismiss="modal"'
          }) %>
          <%- include('../../partials/button', {
            id: 'confirmApplyUpdateBtn',
            type: 'button',
            variant: 'btn-primary',
            text: 'Apply'
          }) %>
        </div>
      </div>
    </div>
  </div>
</div>
<script defer src="/updatesTab.js"></script>
