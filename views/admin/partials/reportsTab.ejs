<div class="container admin-container">
  <h1>Reports</h1>
  <div class="row mb-3">
    <div class="col-md-6 mb-3 mb-md-0">
      <canvas id="salesChart"></canvas>
    </div>
    <div class="col-md-6">
      <canvas id="categoryChart"></canvas>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-6 mb-3 mb-md-0">
      <canvas id="usageChart"></canvas>
    </div>
    <div class="col-md-6">
      <h3>Metrics</h3>
      <p>Profit Margin: <span id="profitMarginVal">-</span>%</p>
      <p>ROI: <span id="roiVal">-</span>%</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3 mb-md-0">
      <h3>Top Items</h3>
      <table class="table table-sm">
        <thead><tr><th>Item</th><th>Qty</th><th>Revenue</th></tr></thead>
        <tbody id="topItemsBody"></tbody>
      </table>
    </div>
    <div class="col-md-6">
      <h3>Low Stock</h3>
      <table class="table table-sm">
        <thead><tr><th>Ingredient</th><th>Qty</th><th>Unit</th></tr></thead>
        <tbody id="lowStockBody"></tbody>
      </table>
    </div>
  </div>
</div>
<script src="/vendor/chart.js"></script>
<script defer src="/reportsAnalytics.js"></script>
