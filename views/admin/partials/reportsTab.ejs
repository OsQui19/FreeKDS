<div id="reportsTab" class="container admin-container">
  <h1 class="admin-section-title">Reports</h1>
  <form id="reportsRangeForm" class="row g-2 mb-3">
    <div class="col-auto">
      <input type="date" id="reportStart" class="form-control form-control-sm" required />
    </div>
    <div class="col-auto">
      <input type="date" id="reportEnd" class="form-control form-control-sm" required />
    </div>
    <div class="col-auto d-flex align-items-center gap-1" id="reportPresets">
      <button type="button" class="btn btn-outline-secondary btn-sm report-preset" data-days="1">Today</button>
      <button type="button" class="btn btn-outline-secondary btn-sm report-preset" data-days="7">7d</button>
      <button type="button" class="btn btn-outline-secondary btn-sm report-preset" data-days="30">30d</button>
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-sm btn-primary">Load</button>
    </div>
  </form>
  <div class="row mb-3">
    <div class="col-md-6 mb-3 mb-md-0">
      <canvas id="salesChart"></canvas>
    </div>
    <div class="col-md-6">
      <canvas id="categoryChart"></canvas>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-6 mb-3 mb-md-0">
      <canvas id="usageChart"></canvas>
    </div>
    <div class="col-md-6">
      <h3>Metrics</h3>
      <p>Profit Margin: <span id="profitMarginVal">-</span>%</p>
      <p>ROI: <span id="roiVal">-</span>%</p>
      <h3 class="mt-3">Avg Ticket Time (min)</h3>
      <table class="table table-sm">
        <thead><tr><th>Station</th><th>Avg</th></tr></thead>
        <tbody id="avgTimesBody"></tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3 mb-md-0">
      <h3>Top Items</h3>
      <table class="table table-sm">
        <thead><tr><th>Item</th><th>Qty</th><th>Revenue</th></tr></thead>
        <tbody id="topItemsBody"></tbody>
      </table>
    </div>
    <div class="col-md-6">
      <h3>Low Stock</h3>
      <table class="table table-sm">
        <thead><tr><th>Ingredient</th><th>Qty</th><th>Unit</th></tr></thead>
        <tbody id="lowStockBody"></tbody>
      </table>
    </div>
  </div>
</div>
<script src="/vendor/chart.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script defer src="/reportsAnalytics.js"></script>
