<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/style.css">
  <%- include('../partials/theme-vars') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script defer src="/adminWindows.js"></script>
</head>
<body class="admin-screen">
  <%- include('partials/header') %>
  <%- include('partials/sidenav') %>
  <% if (req.query.msg) { %>
  <div class="alert alert-success alert-dismissible fade show m-2" role="alert">
    <%= req.query.msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>
  <div id="windowsContainer" class="windows-container flex-layout"></div>
  <template id="tpl-stations"><%- include('partials/stationsTab') %></template>
  <template id="tpl-menu"><%- include('partials/menuTab') %></template>
  <template id="tpl-theme"><%- include('partials/themesTab') %></template>
  <template id="tpl-inventory"><%- include('partials/inventoryTab') %></template>
  <template id="tpl-suppliers"><%- include('partials/suppliersTab') %></template>
  <template id="tpl-purchase-orders"><%- include('partials/purchaseOrdersTab') %></template>
  <template id="tpl-reports"><%- include('partials/reportsTab') %></template>
</body>
</html>
