<!DOCTYPE html>
<html>
<head>
  <%- include('partials/head') %>
</head>
<body class="admin-screen">
  <%- include('partials/header') %>
  <%- include('partials/flashMessage') %>
  <div class="container admin-container">
    <h1>Inventory Locations</h1>
    <table class="table">
      <thead><tr><th>Name</th><th></th><th></th></tr></thead>
      <tbody>
        <% locations.forEach(l => { %>
        <tr>
          <form action="/admin/locations" method="POST">
            <td>
              <input type="hidden" name="id" value="<%= l.id %>">
              <input class="form-control" type="text" name="name" value="<%= l.name %>" required>
            </td>
            <td><button class="btn btn-primary btn-sm" type="submit">Save</button></td>
          </form>
          <td>
            <form action="/admin/locations/delete" method="POST" onsubmit="return confirm('Delete location \"<%= l.name %>\"?');">
              <input type="hidden" name="id" value="<%= l.id %>">
              <button class="btn btn-secondary btn-sm" type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
        <tr>
          <form action="/admin/locations" method="POST">
            <td><input class="form-control" type="text" name="name" placeholder="Name" required></td>
            <td colspan="2"><button class="btn btn-primary btn-sm" type="submit">Add</button></td>
          </form>
        </tr>
      </tbody>
    </table>
  </div>
</body>
</html>
