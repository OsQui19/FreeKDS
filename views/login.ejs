<% title = 'Login'; %>
<% bodyClass = 'login-page'; %>
<%- contentFor('head') %>
<link rel="stylesheet" href="/login.css">
<%- contentFor('body') %>
<div class="login-container">
  <div class="login-card card shadow-sm p-4">
    <h1 class="mb-4">Employee Login</h1>
    <form method="post" action="/login">
      <%- include('partials/form-input', { type: 'text', name: 'username', placeholder: 'Username', required: true, wrapperClass: 'mb-3' }) %>
      <%- include('partials/form-input', { type: 'password', name: 'password', placeholder: 'Password', required: true, wrapperClass: 'mb-3' }) %>
      <%- include('partials/button', { type: 'submit', variant: 'btn-primary', classes: 'w-100', text: 'Log In' }) %>
    </form>
  </div>
</div>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
