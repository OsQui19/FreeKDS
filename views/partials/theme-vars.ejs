<style>
  :root {
    /*
      Provide a light, usable default theme so the customer menu looks
      presentable even before any custom settings are applied.
    */
    --color-bg: <%= settings.theme_bg_color || '#f8f8f8' %>;
    --bg-image: <%= settings.theme_wallpaper ? 'url(' + settings.theme_wallpaper + ')' : 'none' %>;
    --color-primary: <%= settings.theme_primary_color || '#007aff' %>;
    --color-text: <%= settings.text_color || '#000000' %>;
    <% if (settings.font_family) { %>
    --font-family: <%= settings.font_family %>;
    <% } %>
    --button-radius: <%= settings.button_radius || 6 %>px;
    --card-shadow: <%= settings.card_shadow || '0 2px 6px rgba(0, 0, 0, 0.08)' %>;
    --menu-layout: <%= settings.menu_layout || 'grid' %>;
  }
  <%- settings.custom_css || '' %>
</style>
