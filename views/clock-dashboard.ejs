<% title = 'Clock'; %>
<% bodyClass = 'login-page'; %>
<%- contentFor('head') %>
<link rel="stylesheet" href="/login.css">
<%- contentFor('body') %>
<% const headingText = `Welcome ${employee.name}`; %>
<% function dashboardForm() { %>
  <% if (clockedIn) { %>
  <form method="post" action="/clock/out">
      <%- include('partials/button', { type: 'submit', variant: 'btn-secondary', classes: 'w-100', text: 'Clock Out' }) %>
  </form>
  <% } else { %>
  <form method="post" action="/clock/in">
      <%- include('partials/button', { type: 'submit', variant: 'btn-primary', classes: 'w-100', text: 'Clock In' }) %>
  </form>
  <% } %>
<% } %>
<%- include('partials/auth-card', { containerClass: 'text-center', heading: headingText, body: dashboardForm }) %>
