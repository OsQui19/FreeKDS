<% title = 'FreeKDS Interfaces'; %>
<% bodyClass = 'login-page home-page d-flex align-items-center justify-content-center'; %>
<%- contentFor('head') %>
<link rel="stylesheet" href="/login.css">
<link rel="stylesheet" href="/home.css">
<%- contentFor('body') %>
<main class="text-center">
  <% function options() { %>
    <div class="options">
      <%- include('partials/button', { href: '/admin', variant: 'btn-primary', classes: 'dash-btn', icon: 'bi bi-gear-fill me-2', text: 'Admin', extra: 'aria-label="Admin interface"' }) %>
      <%- include('partials/button', { href: '/stations', variant: 'btn-primary', classes: 'dash-btn', icon: 'bi bi-display-fill me-2', text: 'Stations', extra: 'aria-label="Station interface"' }) %>
      <%- include('partials/button', { href: '/foh/order', variant: 'btn-primary', classes: 'dash-btn', icon: 'bi bi-cart-fill me-2', text: 'Order', extra: 'aria-label="Order interface"' }) %>
    </div>
  <% } %>
  <%- include('partials/auth-card', { containerClass: 'text-center', heading: 'Choose Interface', body: options }) %>
</main>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
